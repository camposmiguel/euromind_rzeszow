<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.miguelcr.customlistviewfruits.DetailActivity"
    tools:showIn="@layout/activity_detail">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/introText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:text="The exercise selected is a running with this properties:" />

    <TextView
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="60&apos;"
        android:background="@drawable/bg_info_left"
        android:id="@+id/durationExerciseDetail"
        android:layout_below="@+id/introText"
        android:textColor="@android:color/white"
        android:layout_alignLeft="@+id/introText"/>

    <TextView
        android:padding="8dp"
        android:background="@drawable/bg_info_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 Km"
        android:id="@+id/distanceExerciseDetail"
        android:layout_toRightOf="@+id/durationExerciseDetail"
        android:textColor="@android:color/white"
        android:layout_below="@+id/introText"/>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
