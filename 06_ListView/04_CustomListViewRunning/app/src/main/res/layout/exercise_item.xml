<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="40dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_horizontal_margin">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iconExercise"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:src="@drawable/ic_run_fast" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Running fast"
        android:id="@+id/nameExercise"
        android:layout_toRightOf="@+id/iconExercise"
        android:layout_toEndOf="@+id/iconExercise" />

    <TextView
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="60&apos;"
        android:background="@drawable/bg_info_left"
        android:id="@+id/durationExercise"
        android:layout_below="@+id/nameExercise"
        android:textColor="@android:color/white"
        android:layout_alignLeft="@+id/nameExercise"/>

    <TextView
        android:padding="8dp"
        android:background="@drawable/bg_info_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 Km"
        android:id="@+id/distanceExercise"
        android:layout_toRightOf="@+id/durationExercise"
        android:textColor="@android:color/white"
        android:layout_below="@+id/nameExercise"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_next"
            android:layout_centerVertical="true"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>