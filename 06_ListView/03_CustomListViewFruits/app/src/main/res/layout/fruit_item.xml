<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iconFruit"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_strawberry" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Strawberry"
        android:id="@+id/nameFruit"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iconFruit"
        android:layout_toEndOf="@+id/iconFruit" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="1.99â‚¬/Kg"
        android:id="@+id/priceFruit"
        android:layout_below="@+id/nameFruit"
        android:layout_alignLeft="@+id/nameFruit"/>
</RelativeLayout>